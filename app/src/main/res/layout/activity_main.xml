<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_Camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        style="@style/subtitle_text_style"
        android:text="亮度" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/isb_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:isb_indicator_color="@color/color_gray"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="255"
        app:isb_min="0"
        app:isb_progress="0"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_thumb_text="true"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/color_green"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_drawable="@mipmap/ic_launcher"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/color_blue"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/color_gray"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/color_blue"
        app:isb_track_progress_size="4dp"
        app:isb_track_rounded_corners="true" />
    <TextView
        style="@style/subtitle_text_style"
        android:text="对比度" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/isb_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:isb_indicator_color="@color/color_gray"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="255"
        app:isb_min="0"
        app:isb_progress="0"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_thumb_text="true"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/color_green"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_drawable="@mipmap/ic_launcher"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/color_blue"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/color_gray"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/color_blue"
        app:isb_track_progress_size="4dp"
        app:isb_track_rounded_corners="true" />

    <TextView
        style="@style/subtitle_text_style"
        android:text="饱和度" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/isb_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:isb_indicator_color="@color/color_gray"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="255"
        app:isb_min="0"
        app:isb_progress="0"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_thumb_text="true"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/color_green"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_drawable="@mipmap/ic_launcher"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/color_blue"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/color_gray"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/color_blue"
        app:isb_track_progress_size="4dp"
        app:isb_track_rounded_corners="true" />
    <TextView
        style="@style/subtitle_text_style"
        android:text="色度" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/isb_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:isb_indicator_color="@color/color_gray"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="255"
        app:isb_min="0"
        app:isb_progress="0"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_thumb_text="true"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/color_green"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_drawable="@mipmap/ic_launcher"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_color="@color/color_blue"
        app:isb_tick_texts_size="15sp"
        app:isb_track_background_color="@color/color_gray"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/color_blue"
        app:isb_track_progress_size="4dp"
        app:isb_track_rounded_corners="true" />
</LinearLayout>